<table>
<tr>
<td>

<h3> Form </h3>

<table>
  <tr>
    <th> Title </th>
    <td> {{input value=form.title type='text'}} </td>
  </tr>

  <tr>
    <th> Description </th>
    <td> {{textarea value=form.description}} </td>
  </tr>

  <tr>
    <th> Assignee </th>
    <td>
      {{select-field value=form.assignee options=form.people}}
    </td>
  </tr>

  <tr>
    <th> Completed </th>
    <td> {{checkbox-field value=form.completed}} </td>
  </tr>

  <tr>
    <th> Subscribers </th>
    <td> {{#each form.subscribers as |user|}} {{user.name}}, {{/each}} </td>
  </tr>

  <tr> <td> <hr/> </td> <td> <hr/> </td> </tr>

  <tr> <th> isLoaded </th> <td> {{form.isLoaded}} </td> </tr>
  <tr> <th> isDirty </th> <td> {{form.isDirty}} </td> </tr>
  <tr> <th> isSubmiting </th> <td> {{form.isSubmiting}} </td> </tr>

  <tr>
    <th> </th>
    <td> <button type="submit" {{action 'saveModelForm'}}> Submit </button> </td>
  </tr>
</table>

</td>

<td>
  <h3> Model properties </h3>
    <tr>
      <th> Title </th>
      <td> {{model.title}} </td>
    </tr>
    <tr>
      <th> Description </th>
      <td> {{model.description}} </td>
    </tr>
    <tr>
      <th> Assignee </th>
      <td> {{model.assignee.name}} </td>
    </tr>
    <tr>
      <th> Completed </th>
      <td> {{model.completed}} </td>
    </tr>
    <tr>
      <th> Subscribers </th>
      <td> {{#each model.subscribers as |user|}} {{user.name}}, {{/each}} </td>
    </tr>
  <hr/>

  <h3> Form object properties </h3>

  <table>
    <tr>
      <th> Title </th>
      <td> {{form.title}} </td>
    </tr>
    <tr>
      <th> Description </th>
      <td> {{form.description}} </td>
    </tr>
    <tr>
      <th> Assignee </th>
      <td> {{form.assignee.name}} </td>
    </tr>
    <tr>
      <th> Completed </th>
      <td> {{form.completed}} </td>
    </tr>
    <tr>
      <th> Subscribers </th>
      <td> {{#each form.subscribers as |user|}} {{user.name}}, {{/each}} </td>
    </tr>
  </table>
</td>

</tr>
</table>
